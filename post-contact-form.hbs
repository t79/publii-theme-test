{{> head}}

	<!-- Adding the post -->
	{{#post}}
		<h1>{{{title}}}</h1>
		
		{{{text}}}
		
		<script src="https://www.google.com/recaptcha/api.js" async defer></script>
		<script src="{{js 'contact-form.js'}}"></script>
		
		<form>
			<!-- reCaptcha 'config', calling onSubmit() when test passes -->
			<div id='recaptcha' class="g-recaptcha"
          		data-sitekey="6LeiSOkbAAAAADbPIZ-N25jlqd7jTnCrc1UphtpE"
          		data-callback="onSubmit"
          		data-size="invisible">
          	</div>
			<textarea id="form-input-message" placeholder="... (required)"
				onkeyup="stoppedTyping(this)"></textarea>
			<input type="text" id="form-input-name" placeholder="name" />
			<input type="email" id="form-input-email" placeholder="email" />
			<button id="form-button-submit">Submit</button>
		</form>
		
	{{/post}} <!-- End of post -->
	
{{> footer}}