<!DOCTYPE html>
<html lang="{{ @website.language }}">
	<head>
		
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<link rel="stylesheet" href="{{css 'style.css' }}">
	
	<!-- Title for the page -->
	{{#if title}}
		<title>{{title}}</title>
		{{else}}
		<title>{{@website.name}}</title>
	{{/if}}
	
	</head>
	
	<body>
	
	<!-- Adding logo or site title to the page -->
	
	<!-- Adding link to frontpage if it is not that -->
	{{#is "index"}}{{else}}
		<a href="{{@website.url}}">
	{{/is}}
	
	{{#if @website.logo}}
    	<img src="{{@website.logo}}" alt="{{@website.name}}" 
    		width="{{@website.logoSize.width}}" height="{{@website.logoSize.height}}">
	{{else}}
    	{{@website.name}}
	{{/if}}
	
	<!-- Closing link if not frontpage -->
	{{#is "index"}}{{else}}
		</a>
	{{/is}}
	
	<!-- End adding logo... -->